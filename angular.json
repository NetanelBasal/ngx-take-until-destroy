{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "until-destroy": {
      "root": "",
      "sourceRoot": "src",
      "projectType": "library",
      "prefix": "until-destroy",
      "architect": {
        "test": {
          "builder": "@angular-builders/jest:run",
          "options": {
            "no-cache": false
          }
        }
      }
    },
    "integration": {
      "root": "integration",
      "sourceRoot": ".",
      "projectType": "application",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist-integration",
            "index": "integration/index.html",
            "main": "integration/main.ts",
            "polyfills": "integration/polyfills.ts",
            "tsConfig": "integration/tsconfig.app.json",
            "preserveSymlinks": true,
            "assets": ["integration/assets"],
            "vendorChunk": true,
            "extractLicenses": false,
            "buildOptimizer": false,
            "sourceMap": true,
            "optimization": false,
            "namedChunks": true
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "integration/environments/environment.ts",
                  "with": "integration/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "namedChunks": false,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "integration:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "integration:build:production"
            }
          }
        },
        "test": {
          "builder": "@angular-builders/jest:run"
        }
      }
    }
  },
  "defaultProject": "until-destroy"
}
