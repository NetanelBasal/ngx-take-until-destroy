{
  "name": "until-destroy-playground",
  "version": "0.0.0",
  "description": "RxJS operator that unsubscribes when Angular component is destroyed",
  "license": "MIT",
  "scripts": {
    "postinstall": "ngcc && husky install",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors init",
    "release": "cd src && standard-version --infile ../CHANGELOG.md",
    "ng": "ng",
    "lint": "ng lint",
    "test": "ng test --project until-destroy --run-in-band",
    "test:watch": "ng test --project until-destroy --run-in-band --watch-all",
    "test:integration": "ng test --project integration --run-in-band",
    "test:integration:watch": "ng test --project integration --run-in-band --watch",
    "build": "ng build",
    "postbuild": "npm run build:migration && cpx README.md dist",
    "build:migration": "tsc --outDir dist/migration migration/run.ts",
    "build:integration": "ng build --project integration --configuration production",
    "serve:integration": "ng serve --project integration",
    "serve:integration:static": "serve -l 4200 -s dist-integration",
    "format": "prettier --write \"**/*.{js,ts,html,md,json}\"",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "test:e2e:integration": "start-test serve:integration:static 4200 cy:run"
  },
  "maintainers": [
    "Netanel Basal",
    "Artur Androsovych"
  ],
  "keywords": [
    "Angular easy unsubscribe",
    "RxJS easy unsubscribe",
    "RxJS operator unsubscribe",
    "Angular unsubscribe"
  ],
  "devDependencies": {
    "@angular-builders/jest": "^12.0.0",
    "@angular-devkit/build-angular": "~12.0.0",
    "@angular-eslint/builder": "12.1.0",
    "@angular-eslint/eslint-plugin": "12.1.0",
    "@angular-eslint/eslint-plugin-template": "12.1.0",
    "@angular-eslint/schematics": "12.1.0",
    "@angular-eslint/template-parser": "12.1.0",
    "@angular/cli": "~12.0.0",
    "@angular/common": "~12.0.0",
    "@angular/compiler": "~12.0.0",
    "@angular/compiler-cli": "~12.0.0",
    "@angular/core": "~12.0.0",
    "@angular/platform-browser": "~12.0.0",
    "@angular/platform-browser-dynamic": "~12.0.0",
    "@angular/router": "~12.0.0",
    "@commitlint/cli": "^13.0.0",
    "@commitlint/config-conventional": "^13.0.0",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.1",
    "@typescript-eslint/eslint-plugin": "4.23.0",
    "@typescript-eslint/parser": "4.23.0",
    "all-contributors-cli": "^6.8.1",
    "cpx": "^1.5.0",
    "cypress": "^7.4.0",
    "eslint": "^7.26.0",
    "eslint-plugin-ban": "^1.5.2",
    "glob": "^7.1.6",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "ng-packagr": "^12.0.0",
    "prettier": "^2.3.1",
    "rxjs": "^6.5.2",
    "serve": "^11.3.2",
    "standard-version": "^9.0.0",
    "start-server-and-test": "^1.12.0",
    "ts-jest": "^26.5.6",
    "ts-morph": "^7.1.2",
    "typescript": "4.2.4",
    "zone.js": "~0.11.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,ts,html,md,json}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "printWidth": 95,
    "endOfLine": "lf",
    "singleQuote": true
  },
  "dependencies": {
    "minimist": "^1.2.5",
    "tslib": "^2.0.0"
  }
}
